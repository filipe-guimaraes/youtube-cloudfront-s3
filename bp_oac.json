{
    "Version": "2008-10-17",
    "Id": "PolicyForCloudFrontPrivateContent",
    "Statement": [
        {
            "Sid": "AllowCloudFrontServicePrincipal",
            "Effect": "Allow",
            "Principal": {
                "Service": "cloudfront.amazonaws.com"
            },
            "Action": "s3:GetObject",
            "Resource": "ARN_DO_SEU_BUCET/*",
            "Condition": {
                "StringEquals": {
                    "AWS:SourceArn": "ARN_DA_SUA_DISTRIBUICAO_DE_CLOUDFRONT"
                }
            }
        }
    ]
}